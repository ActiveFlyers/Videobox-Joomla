<?xml version="1.0" encoding="utf-8"?>
<extension type="package" method="upgrade" version="<%= joomlaVersion %>" >
    <name>Videobox package</name>
	<packagename>videobox</packagename>
    <creationDate>April 2014</creationDate>
    <description>Package containing standard Videobox plugins and libraries</description>
    
	<license><%= license %></license>
    <author><%= author %></author>
    <copyright><%= copyright %></copyright>
    <authorEmail><%= mail %></authorEmail>
    <authorUrl><%= url %></authorUrl>
    <version><%= version %></version>
	
	<files>
		<file type="library" id="videobox">lib_videobox.zip</file>
		<file type="plugin" id="videobox" group="system">plg_system_videobox.zip</file>
		<file type="plugin" id="youtube" group="videobox">plg_videobox_youtube.zip</file>
		<file type="plugin" id="vimeo" group="videobox">plg_videobox_vimeo.zip</file>
		<file type="plugin" id="soundcloud" group="videobox">plg_videobox_soundcloud.zip</file>
		<file type="plugin" id="twitch" group="videobox">plg_videobox_twitch.zip</file>
		<file type="plugin" id="html5" group="videobox">plg_videobox_html5.zip</file>
	</files>
    <updateservers>
        <server type="collection" name="pkg_videobox">https://static.htk.io/files/files/videobox/updates-joomla.xml</server>
    </updateservers>
</extension>