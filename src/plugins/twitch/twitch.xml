<?xml version="1.0" encoding="utf-8"?>
<extension type="plugin" group="videobox" method="upgrade" version="<%= joomlaVersion %>" >
    <name>Videobox - Twitch</name>
    <creationDate>March 2016</creationDate>
    <description>Video plugin for Joomla!</description>
    
	<license><%= license %></license>
    <author><%= author %></author>
    <copyright><%= copyright %></copyright>
    <authorEmail><%= mail %></authorEmail>
    <authorUrl><%= url %></authorUrl>
    <version><%= version %></version>
    
    <files>
        <filename plugin="twitch">twitch.php</filename>
        <filename plugin="twitch">index.html</filename>
    </files>
    <config>
        <fields name="params">
            <fieldset name="basic">
                <field name="channelImage" type="list" default="logo" label="Channel image" description="Image to be used as a thumbnail when linking to a Twitch channel" >
                    <option value="logo">Logo</option>
                    <option value="video_banner">Video banner</option>
                    <option value="profile_banner">Profile banner</option>
                </field>
			</fieldset>
        </fields>
    </config>
</extension>
